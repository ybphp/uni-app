.content {
  padding: 40rpx 0;
}
.title {
  padding: 0 40rpx;
  font-size: 38rpx;
  font-weight: bold;
}
.survey-group {
  padding: 0 40rpx;
  margin-top: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.survey-item {
  text-align: center;
}
.survey-item-title {
  display: block;
  font-size: 24rpx;
}
.survey-item-desc {
  margin-top: 10rpx;
  display: block;
  font-size: 36rpx;
  font-weight: bold;
}
.desc-group {
  margin: 60rpx 0 0 0;
  padding: 40rpx 40rpx 0 40rpx;
  border-top: 2rpx solid #eeeeee;
}
.desc-title {
  font-size: 24rpx;
}
.desc-group .desc {
  margin-top: 20rpx;
  font-size: 28rpx;
  line-height: 48rpx;
  margin-top: 10rpx;
  border: 2rpx solid #eeeeee;
  min-height: 600rpx;
  padding: 20rpx;
}
.add-task-btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  font-size: 32rpx;
  border-radius: 0;
}

